<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.JadwalFragment"
    android:orientation="vertical"
    android:background="@drawable/gradient2">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TJ WAE"
        android:textColor="@android:color/black"
        android:textSize="24dp"
        android:layout_gravity="center"/>

    <Spinner
        android:layout_marginTop="25dp"
        android:padding="20sp"
        android:id="@+id/sp_halte_name"
        android:entries="@array/nama_halte_jogja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/bt_lihat_jadwal"
        android:layout_marginRight="120sp"
        android:layout_marginLeft="120sp"
        android:text="Lihat Jadwal"
        android:layout_width="match_parent"
        android:layout_height="45sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🚍"
        android:textSize="130dp"
        android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:layout_marginTop="80dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aman Nyaman "
            android:textSize="20dp"
            android:textColor="@android:color/black"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Terjangkau "
                android:textSize="20dp"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Beri Review Perjalanan? "
            android:textColor="@android:color/black"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/catatan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review" />

    </LinearLayout>



</LinearLayout>